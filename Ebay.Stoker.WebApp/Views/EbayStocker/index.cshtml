@using eBay.Service.Core.Soap;
@model Ebay.Stoker.WebApp.Models.SellerSerchModel

@{
    ViewBag.Title = "View";
}
<h2>View</h2>

<h3>Stoker Application</h3>

<script src="~/Scripts/jquery-3.1.1.js"></script>

<div class="container">


    <form class="form-group" role="form" action="@Url.Action("Index")" method="get">
        <div class="form-group">

            <div class="row">
                <input id="daterange" name="daterange" class="date form-control"/>
                @Html.HiddenFor(m=>m.startdate)
                @Html.HiddenFor(m => m.endDate)
            </div>
            <div class="row">

                <label class="control-label" for="sellerName">Enter Sellerid</label>
               @Html.TextBoxFor(m => m.sellerName , new { @class = "form-control" })
          

            </div>
        </div>

        <button type="submit" class="btn btn-default">
            Serch
            <i class="fa fa-fw fa-search"></i>
        </button>
    </form>
</div>

 @if (Model.sellerlist != null && Model.sellerlist.Count > 0)
     {


    <table class="table-condensed">
        <thead  class="thead-inverse">
            <tr>
                <th>  </th>
                <th>Title</th>
                <th>id</th>
                <th  data-sortable="true">Whatching</th>
                <th data-sortable="true">Quantity Sold</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ItemType item in Model.sellerlist)
            {
               <tr>
                   <td><a class="pull-left" href=@item.PictureDetails.GalleryURL><img class="media-object" src=@item.PictureDetails.GalleryURL height="64" width="64"></td>
                   <td>@item.Title </td>
                   <td>@item.ItemID</td>
                   <td>@item.WatchCount</td>
                   <td>@item.SellingStatus.QuantitySold</td>
                   <td>@item.Quantity</td>

               </tr>
  
            }
         </tbody>


          
        
</table>
