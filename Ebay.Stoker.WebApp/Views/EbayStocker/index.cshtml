<script type="text/javascript">

$(function() {

    $('input.date').daterangepicker(
    {
        locale: {
            format: 'DD-MM-YYYY'
        },
   
    },
    function (start, end, label) {
        
        $('input[name="startdate"]').val(start.format('MM-DD-YYYY'));
        $('input[name="endDate"]').val(end.format('MM-DD-YYYY'));
    });
});
</script>